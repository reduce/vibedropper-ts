{
  "dxt_version": "0.2",
  "name": "vibedropper-mcp",
  "version": "0.2.0",
  "description": "The official MCP Server for the Vibedropper API",
  "author": {
    "name": "Vibedropper"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reduce/vibedropper-ts.git"
  },
  "homepage": "https://github.com/reduce/vibedropper-ts/tree/main/packages/mcp-server#readme",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "VIBEDROPPER_API_KEY": "${user_config.VIBEDROPPER_API_KEY}"
      }
    }
  },
  "user_config": {
    "VIBEDROPPER_API_KEY": {
      "title": "api_key",
      "description": "API key from Organization Settings > API. Use header: Authorization: Bearer <your_key> or X-API-Key: <your_key>",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
